# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_github_oauth_client_id_here
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret_here
GITHUB_WEBHOOK_SECRET=your_random_webhook_secret_here

# Craft MCP Configuration
CRAFT_MCP_URL=craft://mcp/your-mcp-connection-url-here

# LLM Configuration - Google Gemini (FREE!)
GOOGLE_API_KEY=your_gemini_api_key_here
LLM_PROVIDER=google

